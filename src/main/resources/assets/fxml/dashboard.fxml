<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.uoguelph.frontend.DashboardController">
    <left>
        <VBox spacing="20" style="-fx-background-color: #2b3e50; -fx-padding: 20; -fx-alignment: top-center;">
            <Text style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: white;" text="UMS" />
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-alignment: center-left;" text="Dashboard">
                <graphic>
                    <Text style="-fx-font-size: 16;" text="🏠" />
                </graphic>
            </Button>
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-alignment: center-left;" text="Subject Manager">
                <graphic>
                    <Text style="-fx-font-size: 16;" text="📚" />
                </graphic>
            </Button>
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-alignment: center-left;" text="Student List">
                <graphic>
                    <Text style="-fx-font-size: 16;" text="👨‍🎓" />
                </graphic>
            </Button>
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-alignment: center-left;" text="Faculty List">
                <graphic>
                    <Text style="-fx-font-size: 16;" text="👩‍🏫" />
                </graphic>
            </Button>
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-alignment: center-left;" text="Event Manager">
                <graphic>
                    <Text style="-fx-font-size: 16;" text="📅" />
                </graphic>
            </Button>
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-alignment: center-left;" text="Course Catalog">
                <graphic>
                    <Text style="-fx-font-size: 16;" text="📖" />
                </graphic>
            </Button>
            <Button style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14; -fx-alignment: center-left;" text="Profile">
                <graphic>
                    <Text style="-fx-font-size: 16;" text="👤" />
                </graphic>
            </Button>
        </VBox>
    </left>

    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <HBox spacing="10" style="-fx-alignment: center-left;">
                <Text style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #333333;" text="Welcome, Admin!" />
            </HBox>

            <HBox spacing="20">
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Text style="-fx-font-size: 16; -fx-fill: #666666;" text="Total Students" />
                    <Text style="-fx-font-size: 32; -fx-font-weight: bold; -fx-fill: #4a90e2;" text="1,234" />
                </VBox>
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Text style="-fx-font-size: 16; -fx-fill: #666666;" text="Total Courses" />
                    <Text style="-fx-font-size: 32; -fx-font-weight: bold; -fx-fill: #6a11cb;" text="56" />
                </VBox>
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                    <Text style="-fx-font-size: 16; -fx-fill: #666666;" text="Upcoming Events" />
                    <Text style="-fx-font-size: 32; -fx-font-weight: bold; -fx-fill: #e67e22;" text="12" />
                </VBox>
            </HBox>
            <VBox spacing="10">
                <Text style="-fx-font-size: 20; -fx-font-weight: bold; -fx-fill: #333333;" text="Upcoming Events" />
                <ListView prefHeight="200" style="-fx-background-radius: 10; padd: 20; -fx-background-color: white; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                </ListView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
