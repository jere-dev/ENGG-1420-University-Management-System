<!-- ADMIN: lists all courses with the choice to add or edit any. -->

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.uoguelph.frontend.admin.CourseManagerController">
   <children>
      <GridPane layoutX="20.0" layoutY="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="170.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="80.0" prefWidth="80.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="200.0" />
            <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" maxWidth="-Infinity" minWidth="40.0" prefWidth="40.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <ImageView fitHeight="60.0" fitWidth="164.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../images/unilogo.png" />
               </image>
               <GridPane.margin>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </GridPane.margin>
            </ImageView>
            <TextField fx:id="searchField" maxWidth="1.7976931348623157E308" prefHeight="28.0" prefWidth="197.0" promptText="Enter Subject" style="-fx-background-color: white; -fx-border-color: grey; -fx-border-radius: 5;" GridPane.columnIndex="2">
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
            </TextField>
              <Button maxWidth="1.7976931348623157E308" onAction="#handleAdd" prefHeight="26.0" prefWidth="60.0" style="-fx-background-color: WHITE; -fx-border-color: Gray; -fx-border-radius: 5;" text="Create" textAlignment="CENTER" textFill="#9e9e9e" GridPane.columnIndex="1">
               <font>
                  <Font name="Roboto Regular" size="12.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </GridPane.margin>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleSearch" style="-fx-background-color: WHITE; -fx-border-color: GREY; -fx-border-radius: 5;" text="⌕" textFill="#9e9e9e" GridPane.columnIndex="3" />
         </children>
      </GridPane>
      <ScrollPane fx:id="scrollPane" fitToWidth="true" hmax="2000.0" layoutX="20.0" layoutY="70.0" prefHeight="200.0" prefWidth="560.0" vmax="1000.0" AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="90.0">
         <content>
            <GridPane hgap="2.0" vgap="2.0">
              <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <padding>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </padding>
            </GridPane>
         </content>
      </ScrollPane>
      <HBox alignment="CENTER" layoutX="20.0" layoutY="350.0" spacing="5.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0">
         <children>
            <Button fx:id="leftPageButton" mnemonicParsing="false" onAction="#handlePrevPage" text="⮜" />
            <Label fx:id="pageCounter" text="Page " />
            <Button fx:id="rightPageButton" mnemonicParsing="false" onAction="#handleNextPage" text="⮞" />
         </children>
      </HBox>
   </children>
</AnchorPane>
