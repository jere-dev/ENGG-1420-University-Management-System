<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.GridPane?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.uoguelph.frontend.admin.FacultyManagerController">
    <VBox spacing="10" style="-fx-background-color: #F5F5F5; -fx-padding: 20;">
        <Label text="Faculty List" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #941B0C;">
            <font>
                <Font name="Graduate" size="24.0" />
            </font>
        </Label>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <TextField fx:id="searchField" promptText="Search faculty..." prefWidth="200"/>
            <ComboBox fx:id="departmentFilter" promptText="Department"/>
            <ComboBox fx:id="yearFilter" promptText="Academic Year"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button onAction="#handleRefreshFaculty" text="Refresh" styleClass="action-button"/>
            <Button onAction="#handlePrintList" text="Print" styleClass="action-button"/>
        </HBox>

        <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5;" VBox.vgrow="ALWAYS">
            <GridPane fx:id="tableGrid" vgap="5" hgap="10" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </GridPane>

            <HBox spacing="10" alignment="CENTER">
                <Button fx:id="leftPageButton" text="&lt;" onAction="#handlePrevPage" styleClass="action-button"/>
                <TextField fx:id="pageText" prefWidth="50" onKeyPressed="#handleKeyPage"/>
                <Button fx:id="rightPageButton" text="&gt;" onAction="#handleNextPage" styleClass="action-button"/>
                <TextField fx:id="rowCountText" prefWidth="100" onKeyPressed="#handleKeyCount"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button onAction="#handleFacultyDetails" text="VIEW DETAILS →" styleClass="action-button"/>
                <Button onAction="#handleExportList" text="EXPORT LIST →" styleClass="action-button"/>
            </HBox>
        </VBox>
    </VBox>
</ScrollPane>
