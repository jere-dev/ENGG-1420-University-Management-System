<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ca.uoguelph.frontend.DashboardContentController"
      style="-fx-background-color: #F5F5F5; -fx-padding: 20;">

    <Label text="Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #941B0C;">
        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
        <font>
            <Font name="Graduate" size="24.0"/>
        </font>
    </Label>

    <HBox spacing="15" alignment="CENTER">
        <Button text="View Courses" onAction="#handleCourses"
                style="-fx-background-color: #941B0C; -fx-text-fill: #F6AA1C; -fx-font-size: 14px; -fx-min-width: 150px; -fx-min-height: 45px; -fx-font-weight: bold; -fx-background-radius: 5;">
            <font>
                <Font name="Graduate" size="14.0"/>
            </font>
        </Button>
        <Button text="View Students" onAction="#handleStudents"
                style="-fx-background-color: #941B0C; -fx-text-fill: #F6AA1C; -fx-font-size: 14px; -fx-min-width: 150px; -fx-min-height: 45px; -fx-font-weight: bold; -fx-background-radius: 5;">
            <font>
                <Font name="Graduate" size="14.0"/>
            </font>
        </Button>
        <Button text="View Faculty" onAction="#handleFaculty"
                style="-fx-background-color: #941B0C; -fx-text-fill: #F6AA1C; -fx-font-size: 14px; -fx-min-width: 150px; -fx-min-height: 45px; -fx-font-weight: bold; -fx-background-radius: 5;">
            <font>
                <Font name="Graduate" size="14.0"/>
            </font>
        </Button>
        <VBox.margin>
            <Insets bottom="20"/>
        </VBox.margin>
    </HBox>

    <VBox VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 5; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label text="Upcoming Events" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #941B0C;">
                <font>
                    <Font name="Graduate" size="20.0"/>
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="+" onAction="#addEvent" 
                    style="-fx-min-width: 40px; -fx-min-height: 40px; -fx-background-color: #941B0C; -fx-text-fill: #F6AA1C; -fx-font-size: 18px; -fx-font-weight: bold; -fx-background-radius: 20;"/>
        </HBox>
        <ListView fx:id="eventsList" VBox.vgrow="ALWAYS" 
                  style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0; -fx-border-radius: 5;">
            <VBox.margin>
                <Insets top="15"/>
            </VBox.margin>
        </ListView>
    </VBox>
</VBox>